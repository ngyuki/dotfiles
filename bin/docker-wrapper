#!/bin/bash

# docker run の -v でソースを realpath に変換するラッパー
# docker run 以外の -v やコンテナで実行するコマンドの -v まで処理してしまう不完全版

args=(command docker)

while [ $# -ne 0 ]; do
  case "$1" in
    -*v)
      args+=("$1")
      shift
      v=$1
      IFS=: eval 'arr=($v)'
      case "${arr[0]}" in
        ./*|/*)
          arr[0]="$(realpath -m -- "${arr[0]}")"
          ;;
      esac
      IFS=: eval 'v="${arr[*]}"'
      args+=("$v")
      ;;
    *)
      args+=("$1")
      ;;
  esac
  shift
done

exec "${args[@]}"
