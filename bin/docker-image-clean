#!/bin/bash

usage_exit() {
  echo "Usage: $0 [-t]" 1>&2
  exit 1
}

TAG=

while getopts th OPT; do
  case $OPT in
    t) TAG=1 ;;
    *) usage_exit ;;
  esac
done

if [[ -n $TAG ]]; then
  docker images | tail -n +2 | sort -k 1,2V | fzf -m | awk '{print $1 ":" $2 }' | xargs --no-run-if-empty docker rmi
else
  docker images | tail -n +2 | sort -k 1,2V | fzf -m | awk '{print $3 }' | xargs --no-run-if-empty docker rmi
fi
