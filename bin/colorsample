#!/bin/bash

for c in \
    "\e[0;31m" \
    "\e[0;32m" \
    "\e[0;33m" \
    "\e[0;34m" \
    "\e[0;35m" \
    "\e[0;36m" \
    "\e[0;37m" \
    "\e[1;30m" \
    "\e[1;31m" \
    "\e[1;32m" \
    "\e[1;33m" \
    "\e[1;34m" \
    "\e[1;35m" \
    "\e[1;36m" \
    "\e[1;37m" \
    "\e[41;30m" \
    "\e[42;30m" \
    "\e[43;30m" \
    "\e[44;30m" \
    "\e[45;30m" \
    "\e[46;30m" \
    "\e[47;30m" \
; do
    str="${c} SAMPLE \e[m"
    echo -en "$str"
    echo " ... $str"
done
