root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space

[*.{php.js}]
indent_size = 4

[*.{sh,html,ejs,tpl,blade.php,json,yml,yaml,sql}]
indent_size = 2

[composer.json]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.{bat,btf}]
end_of_line = crlf
